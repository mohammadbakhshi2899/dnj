<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/category_recycler_home_fragment"
            android:layout_margin="8dp"

            />

        <com.example.daneshjoyarshop.view.customView.ProductView
            android:layout_below="@id/category_recycler_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:textTitle="جدیدترین"
            android:id="@+id/new_product_recycler"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_banner1_home_fragment"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:layout_below="@id/new_product_recycler"/>

        <com.example.daneshjoyarshop.view.customView.ProductView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/img_banner1_home_fragment"
            app:textTitle="تخفیفات داغ"
            android:id="@+id/discount_recycler"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_banner2_home_fragment"
            android:layout_margin="10dp"
            android:layout_below="@id/discount_recycler"/>

        <com.example.daneshjoyarshop.view.customView.ProductView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/img_banner2_home_fragment"
            app:textTitle="پر فروش ترین ها"
            android:id="@+id/top_selling_recycler"/>

    </RelativeLayout>


</ScrollView>